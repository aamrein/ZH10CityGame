<%= form_with(model: accounting, local: true) do |form| %>
  <% if accounting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(accounting.errors.count, "error") %> prohibited this accounting from being saved:</h2>

      <ul>
      <% accounting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :group_id %>
    <%= form.select :group_id, @groups.collect {|group| [group.name, group.id] }, id: :group_id %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, id: :amount %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment, id: :comment %>
  </div>

  <div class="field">
    <%= form.label :hide %>
    <%= form.check_box :hide, id: :hide %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
