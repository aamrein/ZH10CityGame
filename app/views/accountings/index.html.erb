<%= render layout: 'layouts/content_header', locals: {title: Accounting.model_name.human(count: 2)} do %>
  <%= icon_link_to 'plus', t(:new), new_accounting_path %>
<% end %>

<% if @accountings.empty? %>
  <div class="center-message">
    <h4><%= t(:no_accounting_exist) %></h4>
  </div>
<% end %>

<% @accountings.each do |accounting| %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-10 col-sm-8 col-md-6">
          <div class="row">
            <div class="col-6">ID: <%= accounting.group_id %></div>
            <div class="col-6">Amount: <%= accounting.amount %></div>
          </div>
          <div class="row">
            <div class="col-9"><%= accounting.comment %></div>
            <% if accounting.hide %>
              <div class="col-3"><%= t(:invisible) %></div>
          <% else %>
              <div class="col-3"><%= t(:visible) %></div>
          <% end %>
          </div>
        </div>
        <div class="col-2 col-sm-4 col-md-6">
          <span class="pull-right">
            <%= icon_link_to 'pencil', t(:edit), edit_accounting_path(accounting) %>
            <%= icon_link_to 'trash', t(:delete), accounting, method: :delete, data: {confirm: t(:are_you_sure?)} %>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>
