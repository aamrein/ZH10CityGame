      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :task_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :task_description %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :task_location %>
  </div>

  <div class="field">
    <%= form.label :duration_min %>
    <%= form.number_field :duration_min, id: :task_duration_min %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value, id: :task_cost %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment, id: :task_comment %>
  </div>

  <div class="field">
    <%= form.label :optional %>
    <%= form.check_box :optional, id: :task_optional %>
