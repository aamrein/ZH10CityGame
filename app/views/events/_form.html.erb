    <%= form.label :impact_percent %>
    <%= form.number_field :impact_percent, id: :event_impact_percent %>
  </div>

  <div class="field">
    <%= form.label :duration_sec %>
    <%= form.number_field :duration_sec, id: :event_duration_sec %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment, id: :event_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
